\define taggly(subfilter:"all[current]",template:"$:/.tb/ui/ViewTemplate/tagging-sublist")
<$set name=recursive-template value="$template$">
<$list
filter="[$subfilter$tagging[]sort[title]]"
template=<<recursive-template>>>
</$set>
\end